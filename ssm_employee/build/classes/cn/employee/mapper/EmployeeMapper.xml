<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.employee.mapper.EmployeeMapper">

    
 	<select id="findByUsernameAndPassword" parameterType="cn.employee.model.Employee" resultType="cn.employee.model.Employee">
 	    select * from employee where username=#{username} and password=#{password}
 	</select>
	<select id="findByUsername" parameterType="java.lang.String" resultType="int">
 	    select count(*) from employee where username='${value}'
 	</select>
 		<select id="findAll" resultType="cn.employee.model.Employee">
 	    select * from employee
 	</select>

</mapper>
